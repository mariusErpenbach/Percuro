<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Percuro.Services"
             xmlns:vm="clr-namespace:Percuro.ViewModels.EnterpriseViewModels.Production"
             x:Class="Percuro.Views.EnterpriseViews.Production.InventoryView"
             x:DataType="vm:InventoryViewModel">

    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <DockPanel>
        <!-- Header Section -->
        <DockPanel DockPanel.Dock="Top">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="To Production" Command="{Binding ToProductionView}"
                        Width="150" Height="50" Margin="0,0,10,0"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>

                <TextBlock Text="Inventory" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center"
                           Grid.ColumnSpan="2"/> <!-- Absolute centering by spanning columns -->
            </Grid>
        </DockPanel>

        <!-- Search Bar Section -->
        <DockPanel DockPanel.Dock="Top" Margin="10">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <TextBlock Text="(Filter: Geben Sie einen Artikelbegriff ein)" Margin="0,0,0,10" FontStyle="Italic" Foreground="Gray"/>
                <TextBox Width="310" Watermark="Artikel suchen..." Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <ComboBox Width="150" ItemsSource="{Binding LagerOptions}" SelectedItem="{Binding SelectedLager}" Margin="0,0,10,0"/>
                    <ComboBox Width="150" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>

        <!-- Scrollable Content Section -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding GroupedInventoryStocks}" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding LagerName}" IsExpanded="False" Margin="5" Background="#F0F0F0" MinHeight="30">
                            <ListBox ItemsSource="{Binding Items}" Margin="10">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Vertical" Margin="5">
                                            <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding ArtikelIdDescription}"/>
                                            <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding ArtikelBezeichnungDescription}"/>
                                            <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding BestandDescription}"/>
                                            <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding MindestbestandDescription}"/>
                                            <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding PlatzbezeichnungDescription}"/>
                                            <TextBox IsReadOnly="True" BorderThickness="0" Background="Transparent" Text="{Binding LetzteAenderungDescription}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>