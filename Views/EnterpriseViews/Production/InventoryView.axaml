<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Percuro.Services"
             xmlns:vm="clr-namespace:Percuro.ViewModels.EnterpriseViewModels.Production"
             xmlns:models="clr-namespace:Percuro.Models"
             x:Class="Percuro.Views.EnterpriseViews.Production.InventoryView"
             x:DataType="vm:InventoryViewModel"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions">

    <DockPanel>
        <!-- Header Section -->
        <DockPanel DockPanel.Dock="Top">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Button Content="To Production" Command="{Binding ToProductionView}"
                        Width="150" Height="50" Margin="0,0,10,0"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>

                <TextBlock Text="Inventory" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center"
                           Grid.ColumnSpan="2"/> <!-- Absolute centering by spanning columns -->
            </Grid>
        </DockPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <!-- Linke H채lfte: Filter und Content -->
                <DockPanel Grid.Column="0">
                    <!-- Filter Section -->
                    <DockPanel DockPanel.Dock="Top" Margin="10">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                            <TextBlock Text="(Filter: Geben Sie einen Artikelbegriff ein)" Margin="0,0,0,10" FontStyle="Italic" Foreground="Gray"/>
                            <TextBox Width="310" Watermark="Artikel suchen..." Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <ComboBox Width="150" ItemsSource="{Binding LagerOptions}" SelectedItem="{Binding SelectedLager}" Margin="0,0,10,0"/>
                                <ComboBox Width="150" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}"/>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>

                    <!-- Scrollable Content Section -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding GroupedInventoryStocks}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander Header="{Binding LagerName}" IsExpanded="False" Margin="0" MinHeight="30" HorizontalAlignment="Stretch" Focusable="False">
                                        <ItemsControl ItemsSource="{Binding Items}" Margin="0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Expander Margin="0">
                                                        <Expander.Header>
                                                            <StackPanel Orientation="Horizontal" Margin="0">
                                                                <TextBlock Width="150" Text="{Binding ArtikelBezeichnung}" Margin="0"/>
                                                                <TextBlock Width="100" Text="{Binding Bestand}" Margin="0" TextAlignment="Right"/>
                                                            </StackPanel>
                                                        </Expander.Header>
                                                        <Expander.Content>
                                                            <StackPanel Orientation="Vertical" Margin="0">
                                                                <TextBlock Text="{Binding ArtikelIdDescription}" Margin="0"/>
                                                                <TextBlock Text="{Binding ArtikelBezeichnungDescription}" Margin="0"/>
                                                                <TextBlock Text="{Binding BestandDescription}" Margin="0"/>
                                                                <TextBlock Text="{Binding MindestbestandDescription}" Margin="0"/>
                                                                <TextBlock Text="{Binding PlatzbezeichnungDescription}" Margin="0"/>
                                                                <TextBlock Text="{Binding LetzteAenderungDescription}" Margin="0"/>
                                                                <Button Content="Umlagern" Command="{Binding SetAsTransferCandidate}" />
                                                            </StackPanel>
                                                        </Expander.Content>
                                           
                                                    </Expander>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>

                <!-- Rechte H채lfte-->
                <StackPanel Grid.Column="1" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical" IsVisible="{Binding IsRightPanelVisible}">
                    
                    <TextBlock Text="Menge" FontSize="24" Margin="0,0,0,10"/>
                    <TextBlock Text="Beweggrund" FontSize="24" Margin="0,0,0,10"/>
                    <TextBlock Text="Ziel-Lager:" FontSize="24" Margin="0,0,0,10"/>
                    <!-- Ziel-Lager ComboBox-->
                    <ComboBox Width="200" 
                              Margin="0,0,0,10"
                              ItemsSource="{Binding RightSideLagerOptions}"
                              SelectedItem="{Binding SelectedRightSideItem}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LagerName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                
                    <!-- ListBox f체r Lager-Inhalte (nur sichtbar wenn ein Lager ausgew채hlt ist) -->
                    <ListBox ItemsSource="{Binding SelectedRightSideLagerGroup.Items}" 
                             Margin="10" 
                             IsVisible="{Binding !!SelectedRightSideLagerGroup}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding ArtikelId}" Margin="5"/>
                                    <TextBlock Text="{Binding ArtikelBezeichnung}" Margin="5"/>
                                    <TextBlock Text="{Binding Bestand}" Margin="5"/>
                                    <TextBlock Text="{Binding Mindestbestand}" Margin="5"/>
                                    <TextBlock Text="{Binding Platzbezeichnung}" Margin="5"/>
                                    <TextBlock Text="{Binding LetzteAenderung}" Margin="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>