<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Percuro.Services"
             xmlns:vm="clr-namespace:Percuro.ViewModels.EnterpriseViewModels.Production"
             x:Class="Percuro.Views.EnterpriseViews.Production.InventoryView"
             x:DataType="vm:InventoryViewModel">

    <UserControl.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <DockPanel>
        <!-- Header Section -->
        <DockPanel DockPanel.Dock="Top">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="To Production" Command="{Binding ToProductionView}"
                        Width="150" Height="50" Margin="0,0,10,0"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>

                <TextBlock Text="Inventory" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center"
                           Grid.ColumnSpan="2"/> <!-- Absolute centering by spanning columns -->
            </Grid>
        </DockPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Linke Hälfte: Filter und Content -->
                <DockPanel Grid.Column="0">
                    <!-- Filter Section -->
                    <DockPanel DockPanel.Dock="Top" Margin="10">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                            <TextBlock Text="(Filter: Geben Sie einen Artikelbegriff ein)" Margin="0,0,0,10" FontStyle="Italic" Foreground="Gray"/>
                            <TextBox Width="310" Watermark="Artikel suchen..." Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <ComboBox Width="150" ItemsSource="{Binding LagerOptions}" SelectedItem="{Binding SelectedLager}" Margin="0,0,10,0"/>
                                <ComboBox Width="150" ItemsSource="{Binding SortOptions}" SelectedItem="{Binding SelectedSortOption}"/>
                            </StackPanel>
                        </StackPanel>
                    </DockPanel>

                    <!-- Scrollable Content Section -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding GroupedInventoryStocks}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander Header="{Binding LagerName}" IsExpanded="False" Margin="5" MinHeight="30" HorizontalAlignment="Stretch">
                                        <ListBox ItemsSource="{Binding Items}" >
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Expander>
                                                        <Expander.Header>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Width="200" Text="{Binding ArtikelBezeichnung}" Margin="5"/>
                                                                <TextBlock Width="100" Text="{Binding Bestand}" Margin="5"/>
                                                            </StackPanel>
                                                        </Expander.Header>
                                                        <Expander.Content>
                                                            <StackPanel Orientation="Vertical">
                                                                <Border BorderBrush="Gray" BorderThickness="1" Background="Black" Margin="2">
                                                                    <TextBlock Text="{Binding ArtikelIdDescription}" Padding="5" Foreground="White"/>
                                                                </Border>
                                                                <Border BorderBrush="Gray" BorderThickness="1" Background="Black" Margin="2">
                                                                    <TextBlock Text="{Binding ArtikelBezeichnungDescription}" Padding="5" Foreground="White"/>
                                                                </Border>
                                                                <Border BorderBrush="Gray" BorderThickness="1" Background="Black" Margin="2">
                                                                    <TextBlock Text="{Binding BestandDescription}" Padding="5" Foreground="White"/>
                                                                </Border>
                                                                <Border BorderBrush="Gray" BorderThickness="1" Background="Black" Margin="2">
                                                                    <TextBlock Text="{Binding MindestbestandDescription}" Padding="5" Foreground="White"/>
                                                                </Border>
                                                                <Border BorderBrush="Gray" BorderThickness="1" Background="Black" Margin="2">
                                                                    <TextBlock Text="{Binding PlatzbezeichnungDescription}" Padding="5" Foreground="White"/>
                                                                </Border>
                                                                <Border BorderBrush="Gray" BorderThickness="1" Background="Black" Margin="2">
                                                                    <TextBlock Text="{Binding LetzteAenderungDescription}" Padding="5" Foreground="White"/>
                                                                </Border>
                                                            </StackPanel>
                                                        </Expander.Content>
                                                    </Expander>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>

                <!-- Rechte Hälfte: Dropdown-Menü -->
                <StackPanel Grid.Column="1" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical">
                    <ComboBox ItemsSource="{Binding GroupedInventoryStocks}" SelectedItem="{Binding SelectedRightSideLagerGroup}" Width="200" Margin="0,0,0,10">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LagerName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <ListBox ItemsSource="{Binding SelectedRightSideLagerGroup.Items}" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding ArtikelIdDescription}" Margin="5"/>
                                    <TextBlock Text="{Binding ArtikelBezeichnungDescription}" Margin="5"/>
                                    <TextBlock Text="{Binding BestandDescription}" Margin="5"/>
                                    <TextBlock Text="{Binding MindestbestandDescription}" Margin="5"/>
                                    <TextBlock Text="{Binding PlatzbezeichnungDescription}" Margin="5"/>
                                    <TextBlock Text="{Binding LetzteAenderungDescription}" Margin="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>